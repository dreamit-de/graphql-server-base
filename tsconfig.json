{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2022",
        "moduleResolution": "Bundler",
        "sourceMap": true,
        "outDir": "build",
        "lib": ["ES2022", "DOM"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "baseUrl": ".",
        "verbatimModuleSyntax": true,
        "erasableSyntaxOnly": true
    },
    "include": ["tsup.config.ts", "src/**/*"],
    "exclude": ["node_modules"]
}
